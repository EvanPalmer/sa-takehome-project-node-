          <div class="mt-20 text-center text-secondary border-placeholder">
            Add Stripe Element here!

              <script async
                src="https://js.stripe.com/v3/buy-button.js">
              </script>

              <stripe-buy-button
                buy-button-id="buy_btn_1QkynnFSYQio1CHoue0nUduD"
